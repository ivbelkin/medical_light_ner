{
    "deeppavlov_root": ".",
    "dataset_reader": {
      "class_name": "medicine_light_reader",
      "data_path": "/home/ivb/Repos/ner_medical/data/clinical/",
      "train_filelist": "filelists/fold-0_train_filelist.txt",
      "valid_filelist": "filelists/fold-0_valid_filelist.txt",
      "test_filelist": "filelists/test2_filelist.txt",
      "tags": ["Disease"],
      "as_text": false,
      "skip_empty": false
    },
    "dataset_iterator": {
      "class_name": "data_learning_iterator"
    },
    "chainer": {
      "in": ["sent"],
      "in_y": ["tag_sent_bounds"],
      "pipe": [
        {
          "in": ["sent"],
          "class_name": "lazy_tokenizer",
          "out": ["words"]
        },
        {
          "in": ["words"],
          "class_name": "trim",
          "max_lenght": 64,
          "out": ["words_trim"]
        },
        {
          "in": ["sent", "words"],
          "class_name": "parts_to_bounds",
          "out": ["word_bounds"]
        },
        {
          "in": ["word_bounds", "tag_sent_bounds"],
          "class_name": "bounds_to_tags_bio",
          "out": ["tags_bio"]
        },
        {
          "in": ["tags_bio"],
          "class_name": "trim",
          "max_lenght": 64,
          "out": ["tags_bio_trim"]
        },
        {
          "class_name": "bert_ner_preprocessor",
          "vocab_file": "{BERT_PATH}/vocab.txt",
          "do_lower_case": false,
          "max_seq_length": 128,
          "max_subword_length": 15,
          "token_masking_prob": 0.0,
          "in": ["words_trim"],
          "out": ["x_tokens", "x_subword_tokens", "x_subword_tok_ids", "startofword_markers", "attention_mask"]
        },
        {
          "id": "tag_vocab",
          "class_name": "simple_vocab",
          "unk_token": ["O"],
          "pad_with_zeros": true,
          "save_path": "{NER_PATH}/tag.dict",
          "load_path": "{NER_PATH}/tag.dict",
          "fit_on": ["tags_bio_trim"],
          "in": ["tags_bio_trim"],
          "out": ["tag_indices"]
        },
        {
          "class_name": "my_bert_sequence_tagger",
          "n_tags": "#tag_vocab.len",
          "keep_prob": 0.1,
          "bert_config_file": "{BERT_PATH}/bert_config.json",
          "pretrained_bert": "{MODELS_PATH}/ml_rus_bert/mlrubert_cased_L-12_H-768_A-12_v1/bert_model_1e_ckpt/tf_model.ckpt",
          "attention_probs_keep_prob": 0.5,
          "use_crf": true,
          "return_probas": false,
          "encoder_layer_ids": [-1],
          "optimizer": "tf.train:AdamOptimizer",
          "freeze_embeddings": true,
          "freeze_encoder_up_to": -2,
          "learning_rate": 1e-3,
          "bert_learning_rate": 2e-5,
          "min_learning_rate": 1e-7,
          "learning_rate_drop_patience": 50,
          "learning_rate_drop_div": 10,
          "load_before_drop": true,
          "clip_norm": null,
          "save_path": "{NER_PATH}/model_stage-3_fold-0_pretrained_1e",
          "load_path": "{NER_PATH}/model_stage-2_fold-0_pretrained_1e",
          "in": ["x_subword_tok_ids", "attention_mask", "startofword_markers"],
          "in_y": ["tag_indices"],
          "out": ["tag_indices_hat"]
        },
        {
          "ref": "tag_vocab",
          "in": ["tag_indices_hat"],
          "out": ["tags_bio_hat"]
        }
      ],
      "out": ["words_trim", "tags_bio_hat"]
    },
    "train": {
      "start_epoch_num": 0,
      "epochs": 500,
      "batch_size": 256,
      "metrics": [
        {
          "name": "ner_token_f1",
          "inputs": ["tags_bio_trim", "tags_bio_hat"]
        },
        {
          "name": "ner_f1",
          "inputs": ["tags_bio_trim", "tags_bio_hat"]
        }
      ],
      "validation_patience": 100,
      "val_every_n_epochs": 1,
  
      "log_every_n_epochs": 1,
      "tensorboard_log_dir": "{NER_PATH}/logs_stage-3_fold-0_pretrained_1e",
      "show_examples": false,
      "pytest_max_batches": 2,
      "pytest_batch_size": 1,
      "evaluation_targets": ["valid", "test"],
      "class_name": "nn_trainer"
    },
    "metadata": {
      "variables": {
        "ROOT_PATH": "~/Repos/ner_medical/.deeppavlov",
        "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
        "MODELS_PATH": "{ROOT_PATH}/models",
        "BERT_PATH": "{DOWNLOADS_PATH}/bert_models/rubert_cased_L-12_H-768_A-12_v1",
        "NER_PATH": "{MODELS_PATH}/ner_rus_bert"
      },
      "requirements": [
        "{DEEPPAVLOV_PATH}/requirements/bert_dp.txt"
      ],
      "download": [
        {
          "url": "http://files.deeppavlov.ai/deeppavlov_data/bert/rubert_cased_L-12_H-768_A-12_v1.tar.gz",
          "subdir": "{DOWNLOADS_PATH}/bert_models"
        }
      ]
    }
  }
  